<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/background"
                app:srcCompat="@drawable/trigal_logo" />

            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:autoStart="true"
                android:flipInterval="2000"
                android:inAnimation="@android:anim/slide_in_left"
                android:outAnimation="@android:anim/slide_out_right">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/home_slider1" />

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#65491F"
                            android:text="DIVERSIDAD DE SALAS"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="34sp"
                            android:textStyle="bold"
                            android:translationY="-40dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/img_vision" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="39dp"
                            android:background="#65491F"
                            android:text="ESPACIO INSPIRADOR"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="34sp"
                            android:textStyle="bold"
                            android:translationY="-40dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/home_slider3" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="39dp"
                            android:background="#65491F"
                            android:text="AMBIENTE POSITIVO"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="34sp"
                            android:textStyle="bold"
                            android:translationY="-40dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/home_slider4" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="39dp"
                            android:background="#65491F"
                            android:text="OFICINAS PRIVADAS"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="34sp"
                            android:textStyle="bold"
                            android:translationY="-40dp" />
                    </LinearLayout>
                </LinearLayout>
            </ViewFlipper>
            <View
                android:layout_width="match_parent"
                android:layout_height="34dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:background="@drawable/background"
                android:text="MISIÓN"
                android:textAlignment="center"
                android:textColor="#027353"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/background"
                android:lineSpacingExtra="8sp"
                android:text="&quot;En Trigal Coworking, nos comprometemos a proporcionar soluciones de espacios de trabajo flexibles y colaborativos, centrándonos en ofrecer salas de reuniones de calidad para empresarios en Perú. Nuestra misión es crear un entorno profesional y acogedor que fomente la productividad, la innovación y la colaboración entre profesionales y empresas&quot;"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="349dp"
                android:background="@drawable/home_img" />
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:background="@drawable/background"
                android:text="VISIÓN"
                android:textAlignment="center"
                android:textColor="#027353"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="224dp"
                android:background="@drawable/background"
                android:lineSpacingExtra="8sp"
                android:text="&quot;Nos visualizamos como líderes en la industria de coworking en Perú, siendo reconocidos por nuestra excelencia en la provisión de salas de reuniones que superan las expectativas de nuestros clientes. Buscamos ser un socio estratégico para las empresas al ofrecer espacios flexibles que se adapten a sus necesidades en constante evolución. Aspiramos a ser un referente en la creación de comunidades empresariales vibrantes y conectadas que impulsan el crecimiento mutuo&quot;"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="349dp"
                android:background="@drawable/home_slider2" />
        </LinearLayout>


    </ScrollView>


</LinearLayout>