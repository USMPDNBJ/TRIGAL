<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Trigal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#027353</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#027353</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <style name="DatePickerStyle" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorPrimary">@color/teal_700</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/BotonesDialogo</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/BotonesDialogo</item>
        <!-- Otros atributos que desees modificar -->
    </style>

    <style name="BotonesDialogo" parent="@android:style/Widget.Material.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/boton_selector</item>

    </style>
</resources>